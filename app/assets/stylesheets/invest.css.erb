#one {

  background-image: url('<%= asset_path("Banner_2.jpg") %>');
  background-size: 100% 100%;
  background-position: top;
  background-attachment: scroll;
  background-repeat: no-repeat;
  text-align: center;
  /*border-top: 0.5em solid #5385c1;*/
}


//md
@media screen and (min-width:768px){
  #one p {
      color: #409FB2;
      font-weight: 800;
      font-size: 4.7em;
    }
    #one h2 {
      letter-spacing: 1px;
      font-size: 2em;
      font-weight: 400;
      text-align: center;
      line-height: 1.2em;
    }

    #one .header {
      padding-top: 2em;
    }

    #one .description {
      padding-top: 5em;
      padding-bottom: 14em;
    }
}

//xs
@media screen and (max-width:767px){
  #one p {
      color: #409FB2;
      font-weight: 700;
      font-size: 2.3em;
    }
    #one h2 {
      letter-spacing: 1px;
      font-size: 1.5em;
      font-weight: 300;
      text-align: justify;
    }

    #one .header {
      padding-top: 1.5em;
    }

    #one .description {
      padding-top: 1.5em;
      padding-bottom: 6em;
    }
}
