    padding: 10px;
    margin-bottom: 20px;
  }

  #two .item .img-responsive {
    width: 100%;
  }

  #two .description {
    padding-bottom: 15px;
  }

  #two .center-big {
    padding-top: 30px;
  }

  #two .center-small {
    /*padding-top: 35px;*/
  }
}

